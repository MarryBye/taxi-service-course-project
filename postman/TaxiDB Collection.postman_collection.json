						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"let isJson = true;",
									"let data = null;",
									"",
									"pm.test(\"Response is valid JSON\", function () {",
									"    try {",
									"        data = pm.response.json();",
									"        pm.expect(data).to.be.an(\"object\");",
									"    } catch (e) {",
									"        isJson = false;",
									"    }",
									"    pm.expect(isJson, \"Response body should be JSON\").to.be.true;",
									"});",
									"",
									"pm.test(\"Response has access_token as a string\", function () {",
									"    if (data === null) {",
									"        try { data = pm.response.json(); } catch (e) {}",
									"    }",
									"    pm.expect(data, \"Parsed JSON body should exist\").to.be.an(\"object\");",
									"    pm.expect(data).to.have.property(\"access_token\");",
									"    pm.expect(data.access_token, \"access_token should be a string\").to.be.a(\"string\");",
									"});",
									"",
									"// Save token to active environment when present",
									"if (isJson) {",
									"    if (data === null) {",
									"        try { data = pm.response.json(); } catch (e) {}",
									"    }",
									"    if (data && typeof data.access_token === 'string' && data.access_token.length > 0) {",
									"        pm.environment.set(\"token\", data.access_token);",
									"        pm.test(\"Saved access_token to environment variable 'token'\", function () {",
									"            pm.expect(pm.environment.get(\"token\")).to.eql(data.access_token);",
									"        });",
									"    }",
									"}",
									"",
									"// Optional hint for requests without auth set yet",
									"pm.test(\"Auth not set on request (informational)\", function () {",
									"    const auth = pm.request.auth;",
									"    pm.expect(!auth || auth.type === undefined, \"Auth is not configured on this request\").to.be.true;",
									"});"
								],
